---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Agregar Siniestro">
  <main class="min-h-screen flex items-center justify-center bg-cover bg-center bg-no-repeat" style="background-image: url('/images/carrito2.jpg');">
    <div class="bg-white p-12 rounded-md shadow-md w-96">
      <h1 class="text-3xl font-semibold mb-6">Agregar Siniestro</h1>

      <form action="/agregarSiniestro" method="post">
        <div class="mb-6">
          <label for="tipo" class="block text-gray-600 text-sm font-semibold mb-2">Tipo</label>
          <input type="text" id="tipo" name="tipo" class="w-full px-6 py-2 border rounded-md focus:outline-none focus:border-blue-500">
        </div>

        <div class="mb-6">
          <label for="detalles" class="block text-gray-600 text-sm font-semibold mb-2">Detalles</label>
          <textarea id="detalles" name="detalles" rows="4" class="w-full px-6 py-2 border rounded-md focus:outline-none focus:border-blue-500"></textarea>
        </div>

        <div class="mb-6">
          <label for="lugar" class="block text-gray-600 text-sm font-semibold mb-2">Lugar</label>
          <input type="text" id="lugar" name="lugar" class="w-full px-6 py-2 border rounded-md focus:outline-none focus:border-blue-500">
        </div>

        <div class="mb-6">
          <label for="fecha" class="block text-gray-600 text-sm font-semibold mb-2">Fecha</label>
          <input type="date" id="fecha" name="fecha" class="w-full px-6 py-2 border rounded-md focus:outline-none focus:border-blue-500">
        </div>

        <div class="mb-6">
          <label for="hora" class="block text-gray-600 text-sm font-semibold mb-2">Hora</label>
          <input type="time" id="hora" name="hora" class="w-full px-6 py-2 border rounded-md focus:outline-none focus:border-blue-500">
        </div>

        <div class="mb-6">
          <label for="id_vehiculo" class="block text-gray-600 text-sm font-semibold mb-2">ID Veh√≠culo</label>
          <input type="text" id="id_vehiculo" name="id_vehiculo" class="w-full px-6 py-2 border rounded-md focus:outline-none focus:border-blue-500">
        </div>

        <div>
          <button type="submit" class="bg-blue-500 text-white py-2 px-6 rounded-md hover:bg-blue-600 focus:outline-none focus:bg-blue-600">Agregar Siniestro</button>
        </div>
      </form>
    </div>
  </main>
</Layout>

