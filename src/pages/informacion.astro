---
//javaScrip ->
import Layout from "../layouts/Layout.astro";
---

<Layout title="informacion">
	  <main class="min-h-screen flex items-center justify-center bg-cover bg-center bg-no-repeat"
       style="background-image: url('/images/carrito.jpg');">
		<div class="p-16 bg-white bg-opacity-80 rounded">
			<h1 class="text-3xl font-semibold text-gray-800 mb-8">INFORMACION DE USUARIO</h1>
            <h3 class="text-3xl font-semibold text-gray-800 mb-8">Completa los siguientes campos</h3>

			<form class="max-w-md mx-auto">
				<div class="mb-4">
					<label for="dni" class="block text-gray-600 text-sm font-semibold mb-2">DNI</label>
					<input type="text" id="dni" name="dni" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:border-blue-500" placeholder="ingresar DNI. Ej:1234567">
				</div>

				<div class="mb-4">
					<label for="nombres" class="block text-gray-600 text-sm font-semibold mb-2">Nombres</label>
					<input type="text" id="nombres" name="nombres" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:border-blue-500" placeholder="Nombres del usuario">
				</div>

				<div class="mb-4">
					<label for="primer_apellido" class="block text-gray-600 text-sm font-semibold mb-2">Primer Apellido</label>
					<input type="text" id="primer_apellido" name="primer_apellido" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:border-blue-500" placeholder="Primer apellido">
				</div>

				<div class="mb-4">
					<label for="segundo_apellido" class="block text-gray-600 text-sm font-semibold mb-2">Segundo Apellido</label>
					<input type="text" id="segundo_apellido" name="segundo_apellido" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:border-blue-500" placeholder="Segundo apellido">
				</div>

				<div class="mb-4">
					<label for="fecha_nacimiento" class="block text-gray-600 text-sm font-semibold mb-2">Fecha de Nacimiento</label>
					<input type="date" id="fecha_nacimiento" name="fecha_nacimiento" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:border-blue-500" >
				</div>

				<div class="mb-4">
					<label for="genero" class="block text-gray-600 text-sm font-semibold mb-2">Género</label>
					<select id="genero" name="genero" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:border-blue-500">
						<option value="masculino">Masculino</option>
						<option value="femenino">Femenino</option>
						<option value="otro">Otro</option>
					</select>
				</div>

				<div class="mb-4">
					<label for="direccion" class="block text-gray-600 text-sm font-semibold mb-2">Dirección</label>
					<textarea id="direccion" name="direccion" rows="3" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:border-blue-500" placeholder="Ingresa la direccion en la que resides"></textarea>
				</div>

				<div class="mb-4">
					<label for="telefono" class="block text-gray-600 text-sm font-semibold mb-2">Teléfono</label>
					<input type="tel" id="telefono" name="telefono" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:border-blue-500" placeholder="Telefonos a los que deseas ser contactado: 987654321, ...">
				</div>

				<div class="mb-4">
					<label for="correo" class="block text-gray-600 text-sm font-semibold mb-2">Correo</label>
					<input type="email" id="correo" name="correo" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:border-blue-500" placeholder="Correos a los que deseas ser contactado: correo1, correo2 ...">
				</div>

				<div class="mt-6 flex justify-center items-center" >
					<button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 focus:outline-none focus:bg-blue-600">Enviar</button>
				</div>
			</form>
		</div>
	</main>
</Layout>
